<script src="~/assets/client/js/jquery-2.2.3.min.js"></script>
<script type="text/javascript">
    $("#btnSend").click(function () {
        var name = $("#contactusername").val();
        var email = $("#contactemail").val();
        var address = $("#contactAddress").val();
        var comment = $("#contactcomment").val();
        var url = "/Home/SendFeedbackToDb";
        $.ajax({
            type: "POST",
            url: url,
            data: JSON.stringify({
                name: name,
                email: email,
                address: address,
                comment: comment
            }),
            contentType: 'application/json; charset=utf-8',
            success: function (result) {
                if (result.result) {
                    alert("Chúng tôi đã nhận được thông tin, chúng tôi sẽ liên hệ với bạn sau!");
                    setTimeout(window.location("/Home/Index"), 2000);
                }
                
            }
        });
    });
</script>